  {{range $serv := $services}}{{range $cnt := .Containers -}}

    {{range $port := $serv.Ports}}
      server {{$cnt.Address}}:{{$port.InternalPort}};
    {{- end}}

  {{- end}}{{- end}}
}
{{end}}

